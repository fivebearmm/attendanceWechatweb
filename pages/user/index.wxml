<view class="personalContainer">
  <view class="user-section">
    <image class="bg" src="/static/images/personal/loginLOg.jpg"></image>
    <view class="user-info-box" bindtap="toLogin">
      <view class="portrait-box">
        <image class="portrait" src='{{userInfo.userName?"/static/images/personal/head.jpg":"/static/images/personal/missing-face.png"}}'></image>
      </view>
      <view class="info-box">
        <text class="username">{{userInfo.userName?userInfo.userName: '游客'}}</text>
      </view>
    </view>
  </view>


  <view class="cover-container">
    <image class="arc" src="/static/images/personal/arc.png"></image>
    <!-- 个人中心列表 -->
    <view class="personalContent">
      <view class="cardList">
        <view class="card-item">
          <text class="title">工号</text>
           <text class="more">{{userInfo.staffId?userInfo.staffId: '空'}}</text>
        </view>
        <view class="card-item">
          <text class="title">职称</text>
           <text class="more">{{userInfo.staffTitle?userInfo.staffTitle: '空'}}</text>
        </view>
        <view class="card-item">
          <text class="title">姓名</text>
           <text class="more">{{userInfo.staffName?userInfo.staffName: '空'}}</text>
        </view>
        <view class="card-item">
          <text class="title">电话</text>
          <text class="more">{{userInfo.staffPhone?userInfo.staffPhone: '空'}}</text>
        </view>
        <view class="card-item" bindtap="toRecord">
          <text class="title">实时考勤</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item" bindtap="toRecordMonth">
          <text class="title">非正常出勤</text>
          <text class="more"> > </text>
        </view>
      </view>
    </view>
  </view>


</view>
